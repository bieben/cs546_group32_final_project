<title>Parks Found</title>
<main class="main-content">
<link rel="stylesheet" href="/public/css/searchResult.css">
<link rel="stylesheet" href="/public/css/styles.css">
    <article class="parks-found">
        <h1 class="title">Parks Found</h1>
        <ol>
            {{#each parks}}
                    <li>
                        <h2>{{this.parkName}}</h2>
                        <img class="searchResultImage" src="{{this.photos.[0].url}}" alt="{{this.parkName}} Poster">
                        <p>{{this.description}}</p>
                    </li>
            {{/each}}
        </ol>
    </article>
    <nav>
        <ul>
            {{#if previousPage}}
                <li><a href="/searchparks?page={{decrement currentPage}}">Previous</a></li>
            {{/if}}
            {{#each pages}}
                <li><a href="/searchparks?page={{this}}">{{this}}</a></li>
            {{/each}}
            {{#if nextPage}}
                <li><a href="/searchparks?page={{increment currentPage}}">Next</a></li>
            {{/if}}
        </ul>
    </nav>
    <br>
    <a href="/">Search for Another Park</a>
</main>