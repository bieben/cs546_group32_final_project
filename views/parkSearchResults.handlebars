<title>Parks Found</title>
<main class="main-content">
<link rel="stylesheet" href="/public/css/searchResult.css">
<link rel="stylesheet" href="/public/css/styles.css">
    <article class="parks-found">
        <h1 class="title">Parks Found</h1>
        <ol>
            {{#each parks}}
                    <li>
                        <h2>{{this.parkName}}</h2>
                        <img class="searchResultImage" src="{{this.photos.[0].url}}" alt="{{this.parkName}} Poster">
                        <p>{{this.description}}</p>
                    </li>
            {{/each}}
        </ol>
    </article>
    <nav>
        <div class="pagination">
            {{#if hasPreviousPage}}
                <a href="/searchparks?page={{previousPage}}&searchType={{searchType}}&searchQuery={{searchQuery}}">&laquo;Previous</a>
            {{/if}}
            {{#each pages}}
                <a class="{{#if isActive}}active{{/if}}" href="/searchparks?page={{number}}&searchType={{../searchType}}&searchQuery={{../searchQuery}}">{{number}}</a>
            {{/each}}
            {{#if hasNextPage}}
                <a href="/searchparks?page={{nextPage}}&searchType={{searchType}}&searchQuery={{searchQuery}}">Next&raquo;</a>
            {{/if}}
        </div>
    </nav>
    <br>
    <a href="/">Search for Another Park</a>
</main>